<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="660.0"
            prefWidth="425.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox alignment="CENTER_RIGHT" onMouseDragged="#titleBarDragged" onMousePressed="#titleBarPresssed"
              prefHeight="45.0" prefWidth="366.0" style="-fx-border-width: 0 0 1 0; -fx-border-color: gray;"
              BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="44.0" prefWidth="232.0">
                    <children>
                        <Label text="Chat App">
                            <font>
                                <Font name="System Bold Italic" size="20.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <MaterialDesignIconView glyphName="WINDOW_MINIMIZE" onMousePressed="#minimize" size="30">
                            <HBox.margin>
                                <Insets right="15.0"/>
                            </HBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </MaterialDesignIconView>
                        <MaterialDesignIconView glyphName="WINDOW_CLOSE" onMousePressed="#close" size="30">
                            <HBox.margin>
                                <Insets right="15.0"/>
                            </HBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </MaterialDesignIconView>
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" onKeyPressed="#onKeyPressed" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
              styleClass="wrapper">
            <children>
                <FontAwesomeIconView fill="#ff3f04" glyphName="WECHAT" size="90">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </FontAwesomeIconView>
                <JFXTextField fx:id="txtUsername" prefHeight="25.0" prefWidth="388.0" promptText="Tên tài khoản"
                              styleClass="inputText">
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </JFXTextField>
                <JFXTextField fx:id="txtFullName" prefHeight="25.0" prefWidth="388.0" promptText="Họ tên"
                              styleClass="inputText">
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </JFXTextField>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Giới tính">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <RadioButton fx:id="rdbtnMale" mnemonicParsing="false" text="Nam"/>
                        <RadioButton fx:id="rdbtnFemale" mnemonicParsing="false" text="Nữ"/>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Hyperlink onAction="#chooseAvatar" text="Ảnh đại diện">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Hyperlink>
                        <ImageView fx:id="ivAvatar" fitHeight="88.0" fitWidth="82.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                    </children>
                </HBox>
                <JFXPasswordField fx:id="txtPassword" promptText="Mật khẩu">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <font>
                        <Font size="18.0"/>
                    </font>
                </JFXPasswordField>
                <JFXPasswordField fx:id="txtRetypePassword" promptText="Nhập lại mật khẩu">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <font>
                        <Font size="18.0"/>
                    </font>
                </JFXPasswordField>
                <JFXButton onAction="#btnSignUpClick" style="-fx-background-color: #ff3f04;" styleClass="btn"
                           text="ĐĂNG KÝ" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="11.0"/>
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXButton>
                <HBox alignment="CENTER" prefHeight="32.0" prefWidth="265.0">
                    <children>
                        <Label text="Bạn đã có tài khoản !">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Label>
                        <Hyperlink onAction="#linkToSignIn" text="Đăng nhập" textFill="#2210e8"
                                   textOverrun="CENTER_ELLIPSIS" underline="true">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Hyperlink>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets left="80.0" right="80.0"/>
            </padding>
        </VBox>
    </center>
</BorderPane>
