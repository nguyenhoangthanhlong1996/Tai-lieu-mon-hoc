<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="434.0" prefWidth="273.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.CreateGroup">
    <children>
        <TableView fx:id="tableUser" layoutX="14.0" layoutY="38.0" prefHeight="221.0" prefWidth="248.0">
            <columns>
                <TableColumn fx:id="colUsername" prefWidth="138.0" text="Tên tải khoản"/>
                <TableColumn fx:id="colSelected" minWidth="0.0" prefWidth="109.0" text="Thêm vào nhóm"/>
            </columns>
        </TableView>
        <Label layoutX="14.0" layoutY="269.0" text="Tên nhóm"/>
        <Hyperlink layoutX="14.0" layoutY="295.0" onAction="#chooseAvatarGroup" text="Chọn ảnh đại diện nhóm"/>
        <ImageView fx:id="ivAvatarGroup" fitHeight="70.0" fitWidth="70.0" layoutX="24.0" layoutY="329.0"
                   pickOnBounds="true" preserveRatio="true"/>
        <Button layoutX="183.0" layoutY="364.0" mnemonicParsing="false" onAction="#createGroup" text="Tạo nhóm"/>
        <TextField fx:id="txtSearchUsername" layoutX="15.0" layoutY="14.0" onKeyReleased="#search" prefHeight="25.0"
                   prefWidth="248.0" promptText="Tìm kiếm tên tài khoản"/>
        <TextField fx:id="txtNameGroup" layoutX="75.0" layoutY="265.0" prefHeight="25.0" prefWidth="187.0"
                   promptText="Nhập tên nhóm"/>
    </children>
</AnchorPane>
