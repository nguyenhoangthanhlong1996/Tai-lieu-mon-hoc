<!DOCTYPE HTML>
<html xmlns:th="http://www.thymeleaf.org">

<head>
    <th:block th:include="/userControls/_head"></th:block>
    <!-- page CSS -->
    <!-- DataTables -->
    <link rel="stylesheet" href="/css/dataTables.bootstrap.min.css">
</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div id="preloder" class="loading">Loading&#8230;</div>
    <div class="wrapper">
        <th:block th:include="/userControls/_header"></th:block>
        <th:block th:include="/userControls/_sidebar"></th:block>
        <div class="content-wrapper">
            <th:block th:include="/userControls/_breadcrumb"></th:block>
            <section class="content">
                <!--Begin content page-->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Thông tin chi tiết đợt đăng ký</h3>
                    </div>
                    <form name="frmEnrollmentDetails" id="frmEnrollmentDetails" action="/enrollmentDetails"
                        th:object="${enrollmentDetailsForm}" method="POST">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="enrollmentId">Tên đợt đăng ký</label>
                                        <select id="enrollmentId" th:field="*{enrollmentId}" class="form-control"
                                            required>
                                            <option value="">-- Chọn --</option>
                                            <option th:each="enrollment : ${Enrollments}"
                                                th:value="${enrollment.courseEnrollmentId}"
                                                th:text="${enrollment.courseEnrollmentNbr} + ' - ' + ${enrollment.courseEnrollmentName}">
                                            </option>
                                        </select>
                                        <span th:if="${#fields.hasErrors('enrollmentId')}"
															th:errors="*{enrollmentId}" class="help-block">...</span>
									</div>
								</div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="courseId">Tên khóa học</label>
                                        <select id="courseId" th:field="*{courseId}" class="form-control" required>
                                            <option value="">-- Chọn --</option>
                                            <option th:each="course : ${Courses}" th:value="${course.courseId}" th:text="${course.courseNbr} + ' - ' + ${course.courseName}"></option>
                                        </select>
                                        <span th:if="${#fields.hasErrors('courseId')}"
															th:errors="*{courseId}" class="help-block">...</span>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-3">
										<div class="form-group">
												<label for="slMax">Sĩ số tối đa</label> <input type="text"
													class="form-control" id="slMax"
													placeholder="Nhập sĩ số tối đa" th:field="*{slMax}"
													required> <span
													th:if="${#fields.hasErrors('slMax')}"
													th:errors="*{slMax}" class="help-block">...</span>
										</div>
								</div>								
							</div>
						</div>
						<div class="box-footer">
							<button type="submit" class="btn btn-primary">Xác nhận
								lưu thông tin</button>
							<button id="bnt_Reset" type="button" class="btn btn-default">Nhập lại thông tin</button>
							<input type="hidden" id="enrollmentDetailId" th:field="*{enrollmentDetailId}">
						</div>
						<span th:if="${errorMessage != null}" th:utext="${errorMessage}" class="help-block">...</span>
					</form>
                </div>
                
                <div class="box box-success">
					<div class="box-header">
						<h3 class="box-title">Danh sách chi tiết đợt đăng ký</h3>
					</div>
					<div class="box-body">
							<table id="lstEnrollmentDetails"
							class="table table-bordered table-striped">
							<thead>
								<tr>
									<th style="width: 20px;" class="no-sort"></th>
									<th style="width: 100px;" class="no-sort">Sĩ số</th>
                                    <th>Tên đợt đăng ký</th>
                                    <th>Tên đợt khóa học</th>
								</tr>
							</thead>
							<tbody>
								<tr th:each="enrollmentDetail : ${EnrollmentDetails}" th:data-id="${enrollmentDetail.id}">
									<td>
												<div class="btn-group">
													<button type="button" class="btn btn-success btn-xs dropdown-toggle"
														data-toggle="dropdown">
														<span class="caret"></span> <span class="sr-only">Tùy chọn</span>
													</button>
													<ul class="dropdown-menu" role="menu">
														<li><a th:title="${enrollmentDetail.id}" id="btn_edit" href="#frmEnrollmentDetails">Chỉnh sửa</a></li>
														<li class="divider"></li>
														<li><a th:title="${enrollmentDetail.id}" id="btn_delete" href="#lstEnrollmentDetails">Hủy bỏ</a></li>
													</ul>
												</div>
									</td>
									<td th:text="${enrollmentDetail.slMax}">...</td>
									<td th:text="${enrollmentDetail.courseEnrollmentName}">...</td>
									<td th:text="${enrollmentDetail.courseName}">...</td>
								</tr>
							</tbody>
							<tfoot>
								<tr>
									<th></th>
									<th>Sĩ số</th>
                                    <th>Tên đợt đăng ký</th>
                                    <th>Tên đợt khóa học</th>
								</tr>
							</tfoot>
						</table>
					</div>
				</div>
                <!--End content page-->
			</section>
		</div>
		<th:block th:include="/userControls/_footer"></th:block>
	</div>
	<th:block th:include="/userControls/_script"></th:block>
	<!-- page script -->
	<!-- DataTables -->
	<script src="/js/jquery.dataTables.min.js"></script>
	<script src="/js/dataTables.bootstrap.min.js"></script>
	<script src="/js/bkcourse/enrollmentDetails.js"></script>
</body>

</html>