<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Editor</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="jquery.min.js"></script>
    <script src="ckeditor.js"></script>
    <script src="editorCfg.js"></script>
</head>

<body>
    <div id="wait" style="display:none;width:80px;height:89px;border:0px;position:absolute;top:50%;left:50%;padding:2px;">
        <img src='wait.gif' width="64" height="64" />
        <br>Đang xử lý...
    </div>
    <div id="editor"></div>
    <div id="txt"><h2>Let AJAX change this text</h2></div>
    <button id="bnt_ok">OK</button>
    <script>
        $(document).ready(function () {
            $(document).ajaxStart(function () {
                $("#wait").css("display", "block");
            });
            $(document).ajaxComplete(function () {
                $("#wait").css("display", "none");
            });
            initSample();
            var contentEditor = CKEDITOR.instances.editor;
            contentEditor.setData('<h1>CKEditor 4</h1>');
            $('#bnt_ok').click(function () {
                $("#txt").html(contentEditor.getData());
            });
        });

    </script>
</body>

</html>