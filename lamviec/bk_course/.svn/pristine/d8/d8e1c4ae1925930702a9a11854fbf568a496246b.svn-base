<script>
  $(document).ready(function () {
    $('#preloder').hide();
    $.ajaxSetup({
      beforeSend: function (xhr) {
        $('#preloder').show();
      },
      complete: function (xhr, stat) {
        $('#preloder').hide();
      },
      success: function (result, status, xhr) {
        $('#preloder').hide();
      }
    });
    try {
      $.ajax({
        type: "get",
        url: "/api/getInfoUserLogin",
        data: "",
        success: function (response) {
          if (response.code == "200") {
            var obj = response.data;
            $('.fullName').html(obj.firstName + ' ' + obj.lastName);
            $('.fullName1').html(obj.firstName + ' ' + obj.lastName + '<small>' + obj.roles[0].note + '</small>');
          } else {
            Swal.fire({
              type: 'error',
              title: 'Lỗi tải dữ liệu',
              text: response.msg
            });
          }
        },
        error: function () {
          Swal.fire({
            type: 'error',
            title: 'Lỗi tải dữ liệu',
            text: "Không tải được thông tin người dùng"
          });
        }
      });
    } catch (error) {
      console.log(error.message);
    }
  });
</script>