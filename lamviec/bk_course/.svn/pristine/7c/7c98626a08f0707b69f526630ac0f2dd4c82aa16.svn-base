<!DOCTYPE HTML>
<html xmlns:th="http://www.thymeleaf.org">

<head>
	<th:block th:include="/userControls/_head"></th:block>
	<!-- page CSS -->
	<!-- DataTables -->
	<link rel="stylesheet" href="/css/dataTables.bootstrap.min.css">
</head>

<body class="hold-transition skin-blue sidebar-mini">
	<div id="preloder" class="loading">Loading&#8230;</div>
	<div class="wrapper">
		<th:block th:include="/userControls/_header"></th:block>
		<th:block th:include="/userControls/_sidebar"></th:block>
		<div class="content-wrapper">
			<th:block th:include="/userControls/_breadcrumb"></th:block>
			<section class="content">
				<!--Begin content page-->
				<div class="box box-primary">
					<div class="box-header with-border">
						<h3 class="box-title">Thông tin danh mục</h3>
					</div>
					<!-- /.box-header -->
					<!-- form start -->
					<form name="frmCategories" id="frmCategories" action="/categoies" th:object="${categoriesForm}"
						method="POST">
						<div class="box-body">
							<div class="row">
								<div class="col-md-6">
									<div class="form-group">
										<label for="categoryName">Tên danh mục</label> <input type="text"
											class="form-control" id="categoryName" placeholder="Nhập tên danh mục"
											th:field="*{categoryName}" required> <span th:if="${#fields.hasErrors('categoryName')}"
															th:errors="*{categoryName}" class="help-block">...</span>
													</div>
													<div class="form-group">
														<label for="categoryNbr">Mã định danh</label> <input type="text"
															class="form-control" id="categoryNbr"
															placeholder="Nhập mã định danh" th:field="*{categoryNbr}"
															required> <span
															th:if="${#fields.hasErrors('categoryNbr')}"
															th:errors="*{categoryNbr}" class="help-block">...</span>
													</div>
													<div class="form-group">
														<label for="categoryDesc">Mô tả</label> <input type="text"
															class="form-control" id="categoryDesc"
															placeholder="Nhập mã mô tả" th:field="*{categoryDesc}" required>
														<span th:if="${#fields.hasErrors('categoryDesc')}"
															th:errors="*{categoryDesc}" class="help-block">...</span>
													</div>
													<div class="checkbox">
														<label> <input id="categoryEnable" type="checkbox"
															th:field="*{categoryEnable}"> Sử dụng/Hiện thị
														</label>
													</div>
										</div>
										<div class="col-md-6">
												<div class="form-group">
														<label for="fcategoryImage">Hình đại diện</label> 
														<label id="lbl_deleteCategoryImage" for="icategoryImage" style="color: red; cursor: pointer; display: none;"><i class="fa fa-times-circle-o"> Bỏ chọn hình đại diện</i></label> 
														<input
															type="file" accept="image/*" id="fcategoryImage"
															onchange="encodeImagetoBase64(this, 'icategoryImage');">
														<img alt="Hình đại diện" style="padding-top: 10px" width="150" id="icategoryImage"
															src="data:image/jpeg;base64,">
														<input type="hidden" id="categoryImage"
															th:field="*{categoryImage}">
													</div>
											</div>
								</div>
						</div>
						<!-- /.box-body -->
						<div class="box-footer">
							<button type="submit" class="btn btn-primary">Xác nhận
								lưu thông tin</button>
							<button id="bnt_Reset" type="button" class="btn btn-default">Nhập lại thông tin</button>
							<input type="hidden" id="categoryId" th:field="*{categoryId}">
						</div>
						<span th:if="${errorMessage != null}" th:utext="${errorMessage}"
							class="help-block">...</span>
					</form>
				</div>
				<!-- /.box -->
				<div class="box box-success">
					<div class="box-header">
						<h3 class="box-title">Danh sách danh mục</h3>
					</div>
					<!-- /.box-header -->
					<div class="box-body">
						<table id="lstCategories"
							class="table table-bordered table-striped">
							<thead>
								<tr>
									<th style="width: 20px;" class="no-sort"></th>
									<th style="width: 15px;" class="no-sort">#</th>
									<th>Mã định danh</th>
									<th>Tên danh mục</th>
								</tr>
							</thead>
							<tbody>
								<tr th:each="category : ${Categories}" th:data-id="${category.categoryId}">
									<td>
												<div class="btn-group">
													<button type="button" class="btn btn-success btn-xs dropdown-toggle"
														data-toggle="dropdown">
														<span class="caret"></span> <span class="sr-only">Tùy chọn</span>
													</button>
													<ul class="dropdown-menu" role="menu">
														<li><a th:title="${category.categoryId}" id="btn_edit" href="#frmCategories">Chỉnh sửa</a></li>
														<li class="divider"></li>
														<li><a th:title="${category.categoryId}" id="btn_delete" href="#lstCategories">Hủy bỏ</a></li>
													</ul>
												</div>
									</td>
									<td><input type="checkbox" th:checked="${category.categoryEnable}" disabled="disabled" /></td>
									<td th:text="${category.categoryNbr}">...</td>
									<td th:text="${category.categoryName}">...</td>
								</tr>
							</tbody>
							<tfoot>
								<tr>
									<th></th>
									<th>#</th>
									<th>Mã định danh</th>
									<th>Tên danh mục</th>
								</tr>
							</tfoot>
						</table>
					</div>
				</div>
				<!--End content page-->
			</section>
		</div>
		<th:block th:include="/userControls/_footer"></th:block>
	</div>
	<th:block th:include="/userControls/_script"></th:block>
	<!-- page script -->
	<!-- DataTables -->
	<script src="/js/jquery.dataTables.min.js"></script>
	<script src="/js/dataTables.bootstrap.min.js"></script>
	<script src="/js/bkcourse/categories.js"></script>

</body>

</html>